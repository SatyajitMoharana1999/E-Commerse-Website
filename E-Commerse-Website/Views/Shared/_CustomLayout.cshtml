<!DOCTYPE html>

<html data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_Commerse_Website</title>
    <link href="~/lib/cropper/cropper.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/icon/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/icon/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/tiny-slider.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.css" integrity="sha512-zxBiDORGDEAYDdKLuYU9X/JaJo/DPzE42UubfBw9yg8Qvb2YRRIQ8v4KsGHOx2H1/+sdSXyXxLXv5r7tHc9ygg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Topbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/universal.css" asp-append-version="true" />
    <link href="~/css/addcustomer.css" rel="stylesheet" />
    <link href="~/css/OverwriteBS5.css" rel="stylesheet" />

    @await RenderSectionAsync("Styles", required: false)
    <style>
        .dt-search,.dt-length{
            width: 50%;
            display: flex;
            align-items: center;
        }

        .dt-length{
            width:30%;
            min-width:6rem;
            max-width:8rem;
        }
        
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="top-wrap">
            <div class=" px-4 shadow-sm topbar border bg-dark">
            <div class="left d-flex justify-content-between align-items-center">
                <i class="bi bi-list text-primary me-2 fs-6 px-1 border rounded border-primary" id="openMenu"></i>
                <h4 class="m-0 text-secondary">Control Center</h4> 
            </div>
            <div class="right">                
                <div class="m-2 margin-768-0">
                    <div class="btn-group">
                        <button type="button" class="cb btn dropdown-toggle d-flex flex-row align-items-center" data-bs-toggle="dropdown"  aria-expanded="false">
                            <div class="ag d-flex align-items-center justify-content-center me-2">
                                <div class="ls me-1">
                                    <div class="a_img_box" style="background-image:url('@Url.Content("~/AdminImages/" + ViewData["AdminImage"])')"></div>
                                </div>
                                <div class="rs d-flex flex-column align-items-start justify-content-center ms-1">
                                    <span><a class="admin-name" asp-action="Admin_Details_Page" asp-controller="Admin">@ViewData["AdminName"]</a></span>
                                    <span>@ViewData["Role"]</span>
                                </div>
                            </div>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-lg-end border border-success">
                            <li><a class="dropdown-item adh1" type="button" asp-action="Admin_Details_Page" asp-controller="Admin">My Profile</a></li>
                            <li><a class="dropdown-item adh" type="button" asp-action="Logout" asp-controller="Admin">Log Out</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        </div>
        <div class="menu-wrap">
            <div class="logo_section shadow-sm d-flex align-items-center justify-content-between border">
                <h3 class="m-0  ">Satya</h3>
                <i class="bi bi-x-square text-light fs-4" id="menu-close"></i>
            </div>
            <div class="menubar shadow-sm border">
            <ul>
                <li class="@ViewData["index"]">
                    <a href="@Url.Action("index","Admin")">
                        <i class="bi bi-house-fill"></i> Home
                    </a>
                </li>
                <li class="@ViewData["Admin_Details_Page"]">
                    <a href="@Url.Action("Admin_Details_Page","Admin")">
                        <i class="bi bi-person-circle"></i> Profile
                    </a>
                </li>
                <li class="@ViewData["CustomerList"]">
                    <a href="@Url.Action("CustomerList","Admin")">
                        <i class="bi bi-people-fill"></i> Customers
                    </a>
                </li>
                <li class="@ViewData["CategoryList"]">
                    <a href="@Url.Action("CategoryList","Category")">
                        <i class="bi bi-tags-fill"></i> Category
                    </a>
                </li>
                <li class="@ViewData["ProductList"]">
                    <a href="@Url.Action("ProductList","Category")">
                        <i class="bi bi-bag-fill"></i> Products
                    </a>
                </li>
                <li class="@ViewData["ActivityHistory"]">
                    <a href="@Url.Action("ActivityHistory","History")">
                        <i class="bi bi-activity"></i> Activities
                    </a>
                </li>
                
            </ul>
        </div>
        </div>
        <div class="a-content">
            <div class="con shadow-sm border">
                @RenderBody()
            </div>
        </div>
    </div>
    @*------------------- JQ  -------------------*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*------------------- DataTable  -------------------*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/jszip-3.10.1/dt-2.0.1/b-3.0.0/b-colvis-3.0.0/b-html5-3.0.0/b-print-3.0.0/date-1.5.2/sl-2.0.0/datatables.min.js"></script>
    @*------------------- Bootstrap  -------------------*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @*------------------- Jquery Validation  -------------------*@
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    @*------------------- Croppie JS  -------------------*@
    <script src="~/lib/cropper/cropper.min.js"></script>
    @*------------------- Tiny Slider  -------------------*@
    <script src="~/assets/js/tiny-slider.js"></script>

    @*------------------- Custom - PopUp  -------------------*@
    <script src="~/js/universal.js"></script>
    @*------------------- Custom  -------------------*@
    <script>
        
        $("#openMenu").click(function () {
            $(".menu-wrap").show(400);
            $(".a-content").addClass("contentBlur");
            $(".top-wrap").addClass("contentBlur");
        })
        $("#menu-close").click(function () {
            $(".menu-wrap").hide(400);
           $(".a-content").removeClass("contentBlur");
           $(".top-wrap").removeClass("contentBlur");
        })
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
