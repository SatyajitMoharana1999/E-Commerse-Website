        function getCartItems(){
            let image_Location = `@Url.Content("~/ProductImages/")` || "";

            $.ajax({
                url: "/customer/GetCartItems",
                type: "get",
                success: function (res) {
                    //debugger;
                    console.log("this is cart items");
                    console.log(res);
                    if(res!=null && res.length!=0){
                        $(".total-items").show();
                        $(".cart-items .total-items").html(`${res.length}`);
                        $(".noItemsMessage").hide();
                        $(".checkout-div").show();
                        $(".shopping-list").show();
                        $(".bottom").show();
                        $(".cartItemsCount").html(`${res.length} Items`)
                        html="";
                        let totalPrice = 0;
                        for (let i = 0; i < res.length;i++){
                            let price=res[i].prod.product_price * res[i].product_quantity
                            totalPrice += price;
                            console.log(price);
                            if (i <= 2) {
                                html += `<li>
                                                <span data-id="${res[i].cart_id}" class="remove" title="Remove this item">
                                                    <i class="lni lni-close"></i>
                                                </span>
                                                <div class="cart-img-head">
                                                    <span class="cart-img" href="product-details.html">
                                                        <img src="${image_Location}${res[i].prod.product_image}" alt="#">
                                                    </span>
                                                </div>

                                                <div class="content">
                                                    <h4>
                                                        <span href="product-details.html" class="singleItem">
                                                            ${res[i].prod.product_name}
                                                        </span>
                                                    </h4>
                                                    <p class="quantity">${res[i].product_quantity}x - <span class="amount"> ₹ ${price}</span></p>
                                                </div>
                                            </li>`

                            }
                        }
                        if(res.length>2){
                            $(".remeanings").html(`And ${res.length - 3} more items`);
                            $(".remeanings").show();
                        }
                        else{
                            $(".remeanings").hide();
                        }
                        $(".shopping-list").html(html);
                        $(".total-amount").html(`₹ ${totalPrice}`);
                    }
                    else{
                        $(".noItemsMessage").show();
                        $(".checkout-div").hide();
                        $(".shopping-list").hide();
                        $(".bottom").hide();
                        $(".total-items").hide();
                        $(".remeanings").hide();
                        $(".cartItemsCount").html("0 Items")
                    }
                }
            });
